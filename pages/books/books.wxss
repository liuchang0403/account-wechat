/* pages/books/books.wxss */
.book-item {
    height: 60px;
    background-color: #FFF;
    margin-top: 5px;
    border-top: 1px solid #e1e1e1;
    border-bottom: 1px solid #e1e1e1;
    padding-right:15px;
}

.avatar-pannel {
    float: left;
    margin-top: 10px;
    margin-left: 15px;
}

.user_avatar {
    margin-right: 5px;    
    width:36px;
    height:36px;
    border:2px solid #e1e1e1;
    border-radius:18px;
    background-color: #FFF;
    position: relative;
}

.book-info {
    position: relative;
    margin-left: 5px;
    padding-top:5px;
}
.book-name {
    display: block;    
}

.last-time {
    font-size: 12px;
    color: #555;
    position: absolute;
}