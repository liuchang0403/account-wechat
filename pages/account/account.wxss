/* pages/account/account.wxss */
/* 收入/支出 */
.type-table {
    display: flex;
    margin: 0px  30%;
    margin-bottom: 10px;
    text-align:center;
    font-size:14px;
    height:24px;
    line-height:24px;
    padding-top:10px;
    color: #555;
}


.income-type {
    flex-grow: 1;
    border: 1px solid #e1e1e1;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
}


.output-type {
    flex-grow: 1;    
    border: 1px solid #e1e1e1;
    border-left: 0;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}


.selected {
    color: #da4040;
    border: 1px solid #da4040;
}


/* 金额 */
.input-layout {
    background-color: #FFF;
    height: 48px;
    line-height: 48px;
    padding: 0 15px;
    position: relative;
}

.input-icon {
    width: 28px;
    height: 28px;
    margin-top: 10px; 
    float: left;
}

.input-name {
    margin-left: 10px;
    color: #333;
    font-size: 14px;
}

.calculation,
.input-money {
    color: #000;
    float: right;
    font-size:28px;
}

.calculation {
    font-size: 12px;
    color: #555;
}

/* 收支类别 */
.classify-layout {
    border-top:1rpx solid #d9d9d9;
    overflow:hidden;
}

.classify-item {
    position:relative;
    float:left;
    padding:10px 10px;
    width:20%;
    box-sizing:border-box;
}

.classify-icon {
    display:block;
    width:28px;
    height:28px;
    margin:0 auto;
}

.classify-name {
    margin-top:5px;
    display:block;
    text-align:center;
    color:#555;
    font-size:12px;
    white-space:nowrap;
    text-overflow:ellipsis;
    overflow:hidden;
}

/* 键盘 */
.footer-layout {
    position: absolute;
    bottom: 0px;
    width: 100%;    
    background-color: #fff;
}

.keybord-layout {
    width: 100%;
    border-top: 1px solid #d9d9d9;
    
}

.keybord-item {
    position:relative;
    float:left;
    padding:10px 10px;
    width:25%;
    box-sizing:border-box;
    text-align: center;
}

/* 标签 */
.tag-layout {
    border-top: 1px solid #d9d9d9;
    border-bottom: 1px solid #d9d9d9;
    font-size: 12px;
    padding: 2px 5px;
    background-color: #fff;
    height: 30px;
    line-height: 30px;
}

.tag {
    float: left;
    border-right: 1px solid #bfbfbf;
    padding-right: 7px;
    margin-right: 5px;
    width: 100rpx;
}

.tag-list {
    margin-left: 3px;
    white-space: nowrap;
    width: 500rpx;
    float: left;
}

.tag-item {
    color: #555;
    border: 1px solid #bfbfbf;
    margin: 0 3px;
    border-radius: 6px;
    padding: 1px 7px;
    height: 20px;
    line-height: 20px;
    margin-top: 3px;
    display: inline-block;
}

.icon_remarks {
    position: absolute;
    top: 8px;
    right: 10px;
    width: 24px;
    height: 24px;
}

/* 更多信息 */
.info-layout {
    font-size: 12px;
    padding: 2px 5px;
    background-color: #fff;
    height: 30px;
    line-height: 30px;
    display: flex;
}

.way,
.date {
    color: #555;
    border: 1px solid #bfbfbf;
    margin: 0 3px;
    border-radius: 6px;
    padding: 1px 7px;
    height: 20px;
    line-height: 20px;
    float: left;
    margin-top: 2px;
}



.person-layout {
    height: 30px;
    display: inline;
    padding-left: 10px;
    white-space: nowrap;
    width: 300rpx;
}

.avatars-account {
    width: 22px;
    height: 22px;
    margin-top: 2px;
    border-radius: 11px;
    border: 1px solid #e1e1e1;
    margin-right: 3px;
    display: inline-block;
}

.account_add_person {
    width:18px;
    height:18px;
    position:absolute;
    right:10px;
    margin-top:3px;
}